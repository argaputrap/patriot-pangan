    <main>
        <div class="container">
            <button style="margin:10px; float:right; width:90px" class="btn btn-primary" data-toggle="modal" data-target="#tambahModal">Tambah</button>
            <div class="article-confirmation">
                <table id="artikelTable" class="display" style="width:100%" class="table table-striped table-bordered dt-responsive nowrap">
                </table>
            </div>
        </div>
    </main>
    <div id="loginModal" class="modal fade" role="dialog">
		<div class="modal-dialog">
			<!-- konten modal-->
			<div class="modal-content">
				<!-- heading modal -->
				<div class="modal-header">
					<h4 style="float:left">Login</h4>
					<button type="button" class="close" data-dismiss="modal">&times;</button>
				</div>
				<!-- body modal -->
				<div class="modal-body">
					<form action="submit" method="POST">
                        <div class="form-group">
                            <label>Email </label>
                            <input name="" class="form-control" type="text", placeholder="Email Anda" required>
                        </div>
                        <div class="form-group">
                            <label>Password </label>
                            <input name="" class="form-control" type="password", placeholder="Password Anda" required>
                        </div>
                    </form>
				</div>
				<!-- footer modal -->
				<div class="modal-footer">
					<button type="button" class="btn btn-success" >Login</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
				</div>
			</div>
		</div>
	</div>
    <div id="tambahModal" class="modal fade" role="dialog">
		<div class="modal-dialog">
			<!-- konten modal-->
			<div class="modal-content">
				<!-- heading modal -->
				<div class="modal-header">
					<h4 style="float:left">Tambah Artikel</h4>
					<button type="button" class="close" data-dismiss="modal">&times;</button>
				</div>
				<!-- body modal -->
				<div class="modal-body">
					<form action="submit" id="formTambah" method="POST">
                        <div class="form-group">
                            <label>Judul Artikel </label>
                            <input name="judulArtikel" class="form-control" id="judulArtikel" type="text", placeholder="Judul Artikel Baru" required>
                        </div>
                        <div class="form-group">
                            <label>Isi Artikel</label>
                            <textarea name="isiArtikel" id="editorTambah" class="form-control" rows="10" required></textarea>
                        </div>
                        <div class="form-group">
                            <label>Foto Artikel</label><br>
                            <input type="file" name="fotoArtikel" accept="image/x-png,image/jpeg" id="fotoArtikel" class="form-control" required>
                        </div>
					</form>
				</div>
				<!-- footer modal -->
				<div class="modal-footer">
					<button type="button" id="submitTambah" class="btn btn-success" ><i id='loader' class="fa fa-spinner fa-spin"></i> Submit</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
				</div>
			</div>
		</div>
	</div>
    <div id="editModal" class="modal fade" role="dialog">
		<div class="modal-dialog">
			<!-- konten modal-->
			<div class="modal-content">
				<!-- heading modal -->
				<div class="modal-header">
					<h4 style="float:left">Edit Artikel</h4>
					<button type="button" class="close" data-dismiss="modal">&times;</button>
				</div>
				<!-- body modal -->
				<div class="modal-body">
					<form action="submit" id="formEdit" method="POST">
                        <div class="form-group">
                            <label>Judul Artikel </label>
                            <input name="judulArtikel" id="judulArtikelEdit" class="form-control" type="text" required>
                        </div>
                        <div class="form-group">
                            <label>Isi Artikel</label>
                            <textarea name="isiArtikel" id="editorEdit" class="form-control" rows="10" required></textarea>
                        </div>
                        <div class="form-group">
                            <label>Foto Artikel</label><br>
                            <input type="file" name="fotoArtikel" id="fotoArtikelEdit" value="" required></br>
                            <span><small style="color: red">Silahkan upload ulang jika ingin mengganti Foto</small></span>
                        </div>

                    </form>
				</div>
				<!-- footer modal -->
				<div class="modal-footer">
					<button type="submit" id="submitEdit" class="btn btn-success" >Submit</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
				</div>
			</div>
		</div>
	</div>
